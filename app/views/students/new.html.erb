<%= form_tag students_path do %>
  <%= label_tag(:name, "Name") %>
  <%= text_field_tag(:name, nil, placeholder: @placeholder_name) %>


  <%= label_tag(:favorite_sport, "favorite sport") %>
  <%= text_field_tag(:favorite_sport, nil, placeholder: @placeholder_sport) %>

  <%= label_tag(:favorite_food, "favorite food") %>
  <%= text_field_tag(:favorite_food, nil, placeholder: @placeholder_food) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>